<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_view_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/error_view_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发生错误了"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/error_view_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/error_view_tip_tv"/>
    <Button
        android:id="@+id/error_view_retry_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="点击重试"
        android:layout_below="@+id/error_view_tip_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>